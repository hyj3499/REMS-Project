<Window x:Class="REMS.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:REMS.Client"
        mc:Ignorable="d"
        Title="REMS - Smart Factory Monitor" Height="900" Width="1400"
        Background="#121212">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="REMS : Integrated Control System" 
                           Foreground="White" VerticalAlignment="Center" Margin="25,0" 
                           FontSize="24" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="25,0">
                    <Border x:Name="StatusIndicator" Background="#555555" CornerRadius="50" Width="15" Height="15" Margin="0,0,10,0"/>
                    <TextBlock Text="System Ready" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#252526" CornerRadius="10" Margin="0,0,0,15" Padding="15,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📡 Connection :" Foreground="#AAAAAA" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

                <TextBlock Text="IP Address" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox Text="192.168.0.100" Width="120" Height="26" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0" Padding="5,0"/>

                <TextBlock Text="Port" Foreground="Gray" VerticalAlignment="Center" Margin="15,0,5,0"/>
                <TextBox Text="5000" Width="60" Height="26" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0" Padding="5,0"/>

                <Button Content="CONNECT" Width="100" Height="30" Margin="20,0,0,0" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0"/>

                <TextBlock Text="⚠️ Alarm Limit :" Foreground="#AAAAAA" VerticalAlignment="Center" FontWeight="Bold" Margin="40,0,10,0"/>
                <TextBox Text="50.0" Width="50" Height="26" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0" Padding="5,0"/>
                <TextBlock Text="°C" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌡️ Temperature Trend" Foreground="#AAAAAA" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="(Live)" Foreground="Red" Margin="10,0" VerticalAlignment="Bottom" FontSize="12"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" Series="{Binding TempSeries}" Margin="0,15,0,0"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="10" Margin="0,5,0,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️ Motor Output (PWM)" Foreground="#AAAAAA" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="Current Load: 80%" Foreground="Orange" Margin="10,0" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" Series="{Binding MotorSeries}" Margin="0,15,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="💡 LED Control" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="60" Height="60" Fill="#333333" Stroke="Gray" StrokeThickness="2"/>
                            <UniformGrid Grid.Column="1" Columns="2" Rows="1" Margin="20,0,0,0">
                                <Button Content="ON" Background="#007ACC" Foreground="White" Margin="2" FontWeight="Bold" BorderThickness="0"/>
                                <Button Content="OFF" Background="#333333" Foreground="White" Margin="2" FontWeight="Bold" BorderThickness="0"/>
                            </UniformGrid>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🔌 Motor Control" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Margin="2" Background="#28a745" Content="RUN" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                            <Button Grid.Column="1" Margin="2" Background="#555555" Content="PAUSE" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                        </Grid>

                        <TextBlock Text="Speed (PWM)" Foreground="Gray" Margin="0,15,0,5"/>
                        <Slider Maximum="100" Value="50" TickFrequency="10" IsSnapToTickEnabled="True"/>

                        <Button Height="50" Margin="0,20,0,0" Background="#8B0000" BorderBrush="Red" BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="EMERGENCY STOP" Foreground="White" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="📋 System Logs" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold"/>
                        <Border Grid.Row="1" Background="#121212" CornerRadius="5" Margin="0,10,0,0" Padding="10">
                            <ScrollViewer>
                                <StackPanel>
                                    <TextBlock Text="[System] UI Initialized..." Foreground="Gray" Margin="0,2"/>
                                    <TextBlock Text="[Network] Ready to connect" Foreground="Cyan" Margin="0,2"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
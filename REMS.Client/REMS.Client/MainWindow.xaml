<Window x:Class="REMS.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:REMS.Client"
        mc:Ignorable="d"
        Title="REMS : Remote Equipment Monitoring &amp; Control System" Height="900" Width="1400"
        Background="#121212">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="REMS : Remote Equipment Monitoring &amp; Control System" 
                           Foreground="White" VerticalAlignment="Center" Margin="25,0" 
                           FontSize="24" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="25,0">

                    <Border x:Name="StatusIndicator" CornerRadius="50" Width="15" Height="15" Margin="0,0,10,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#555555"/>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Background" Value="#00FF00"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <TextBlock FontSize="16" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Offline"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="Online"/>
                                        <Setter Property="Foreground" Value="#00FF00"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#252526" CornerRadius="10" Margin="0,0,0,15" Padding="15,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📡 Connection :" Foreground="#AAAAAA" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

                <TextBlock Text="IP Address" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox Text="192.168.0.100" Width="120" Height="26" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0" Padding="5,0"/>

                <TextBlock Text="Port" Foreground="Gray" VerticalAlignment="Center" Margin="15,0,5,0"/>
                <TextBox Text="5000" Width="60" Height="26" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0" Padding="5,0"/>
                <Button Content="CONNECT" Click="BtnConnect_Click" Width="100" Height="30" Margin="20,0,0,0" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0"/>

                <TextBlock Text="⚠️ Alarm Limit :" Foreground="#AAAAAA" VerticalAlignment="Center" FontWeight="Bold" Margin="40,0,10,0"/>
                <TextBox Text="50.0" Width="50" Height="26" VerticalContentAlignment="Center" Background="#333333" Foreground="White" BorderThickness="0" Padding="5,0"/>
                <TextBlock Text="°C" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10" Padding="20" Height="316" VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📶 Wi-Fi Signal Strength (RSSI)" Foreground="#AAAAAA" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="{Binding WifiRssi, StringFormat='{}{0} dBm'}" Foreground="#00CCFF" Margin="15,0" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1" Series="{Binding RssiSeries}" XAxes="{Binding XAxes}" Margin="0,15,0,0"/>
                    </Grid>
                </Border>

                <Border Background="#1E1E1E" CornerRadius="10" Margin="0,330,0,0" Padding="20" Grid.RowSpan="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️ Motor Output (RPM)" Foreground="#AAAAAA" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CurrentRpm, StringFormat='{}{0} RPM'}" Foreground="Orange" Margin="10,0" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1" Series="{Binding RpmSeries}" XAxes="{Binding XAxes}" Margin="0,15,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="💡 LED Control" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Width="60" Height="60" Stroke="Gray" StrokeThickness="2">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#333333"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLedOn}" Value="True">
                                                <Setter Property="Fill" Value="#FF4500"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#FF4500" BlurRadius="20" ShadowDepth="0" Opacity="1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <UniformGrid Grid.Column="1" Columns="2" Rows="1" Margin="20,0,0,0">
                                <Button Content="ON" Command="{Binding TurnLedOnCommand}" Background="#007ACC" Foreground="White" Margin="2" FontWeight="Bold" BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <Button Content="OFF" Command="{Binding TurnLedOffCommand}" Background="#333333" Foreground="White" Margin="2" FontWeight="Bold" BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </UniformGrid>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="10" Margin="0,0,0,10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🔌 Motor Control" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Command="{Binding RunMotorCommand}" Margin="2" Background="#28a745" Content="RUN" Foreground="White" FontWeight="Bold" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Grid.Column="1" Command="{Binding PauseMotorCommand}" Margin="2" Background="#555555" Content="PAUSE" Foreground="White" FontWeight="Bold" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                            <TextBlock Text="PWM: " Foreground="Gray"/>
                            <TextBlock Text="{Binding MotorSpeed}" Foreground="#00CCFF" FontWeight="Bold"/>
                            <TextBlock Text="%" Foreground="Gray"/>
                        </StackPanel>

                        <Slider Maximum="100" Value="{Binding MotorSpeed}" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft"/>

                        <Button Command="{Binding EmergencyStopCommand}" Height="50" Margin="0,20,0,0" Background="#8B0000" BorderBrush="Red" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="EMERGENCY STOP" Foreground="White" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="📋 System Logs" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold"/>

                        <Border Grid.Row="1" Background="#121212" CornerRadius="5" Margin="0,10,0,0" Padding="10">
                            <ScrollViewer>
                                <StackPanel>
                                    <Border Grid.Row="1" Background="#121212" CornerRadius="5" Margin="0,10,0,0" Padding="5">
                                        <TextBox Text="{Binding LogText}" Background="Transparent" Foreground="#DDDDDD" FontSize="12" BorderThickness="0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontFamily="Consolas" />
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>